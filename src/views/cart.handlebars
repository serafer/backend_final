<div class="container py-5">


  <div>

    <h2>Carrito</h2>
  </div>

  <table class="table table-striped table-bordered">
    <thead class="bg-primary text-white">
      <tr>
        <th scope="col">Código</th>
        <th scope="col">Título</th>
        <th scope="col">Descripción</th>
        <th scope="col">Precio</th>
        <th scope="col">Unidades</th>
        <th scope="col">Botón</th>
      </tr>
    </thead>
    <tbod>
      {{#each cartItems}}
        <tr>
          <td>{{this.ProductID.code}}</td>
          <td>{{this.ProductID.title}}</td>
          <td>{{this.ProductID.description}}</td>
          <td>{{this.ProductID.price}}</td>
          <td>{{this.quantity}}</td>
          <td>
            <form
              method="POST"
              action="../api/cart/{{this.cartID}}/prod2/{{this.ProductID._id}}"
            >
              <button
                type="submit"
                class="btn btn-dark btn-block mb-3"
              >+1</button>
            </form>
          
            <form
              method="POST"
              action="../api/cart/{{this.cartID}}/prod3/{{this.ProductID._id}}"
            >
              <button
                type="submit"
                class="btn btn-dark btn-block mb-3"
              >Eliminar</button>
            </form>
          
            
          </td>
        </tr>
      {{/each}}
    </tbod>
  </table>

  <div class="d-flex justify-content-center mt-3 m-5">

       <form
              method="POST"
              action="../api/cart/{{this.cartID}}/purchase"
            >
              <button
                type="submit"
                class="btn btn-dark btn-block mb-3"
              >FINALIZAR COMPRA</button>
            </form>

    </div>

</div>
